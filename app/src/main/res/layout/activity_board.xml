<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".boardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#616F6B"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/l_0_0"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="false"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_0_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_0_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_0_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_0_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_0_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_0_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_0_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/l_1_0"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:animateLayoutChanges="false"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_1_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_1_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_1_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_1_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_1_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_1_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_1_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/l_2_0"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_2_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_2_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_2_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_2_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_2_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_2_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_2_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/l_3_0"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_3_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_3_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_3_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_3_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_3_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_3_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:padding="2.5dp">

                        <ImageView
                            android:id="@+id/n_3_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/refr" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:background="@android:color/black"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/nextcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>